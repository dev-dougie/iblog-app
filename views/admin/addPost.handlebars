<style>
    body {
        font-family: 'Nunito', sans-serif;
    }

    main {
        margin: 10px auto;
        max-width: 90%;
    }

    form {
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 8px;
        border-radius: 6px;
        box-shadow: 0px 3px 10px rgba(88, 88, 88, 0.1), 0px 16px 31px rgba(88, 88, 88, 0.1);
    }

    h3 {
        font-size: 25px;
    }

    label {
        font-size: 15px;
    }

    .input-field {
        width: 90%;
        padding: 2px;
    }

    input,
    textarea,
    select,
    option {
        min-width: 100%;
        border-radius: 6px;
        border: 1px solid gainsboro;
        height: 30px;
        font-size: 15px;
        margin-bottom: 10px;
    }

    textarea {
        height: 75px;
        resize: vertical;
    }

    button {
        border: none;
        margin: 10px auto;
        padding: 5px;
        cursor: pointer;
        color: white;
        width: 90%;
        border-radius: 6px;
        height: 30px;
        font-weight: 700;
        font-size: 15px;
    }

    button[type=submit] {
        background: rgb(62, 238, 39);
    }

    button[type=reset] {
        background: rgb(246, 53, 53);
    }
</style>

{{#each errors}}
<div class="alert-danger">{{text}}</div>
{{/each}}

<main>
    <h3>Adicionar postagem</h3>
    <div class="form-newPost">
        <form action="/admin/postagens/new" method="POST">
            <div class="input-field">
                <label for="title">Título:*</label>
                <input type="text" name="title" id='title'>
            </div>
            <div class="input-field">
                <label for="slug">Slug:*</label>
                <input type="text" name="slug" id='slug'>
            </div>
            <div class="input-field">
                <label for="category">Categoria:*</label>
                <select name="category" id="category">
                    {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                    {{else}}
                    <option value="0">Não há categoria cadastrada</option>
                    {{/each}}
                </select>
            </div>
            <div class="input-field">
                <label for="description">Descrição:*</label>
                <input type="text" name="description" id='description'>
            </div>
            <div class="input-field">
                <label for="content">Conteúdo:*</label>
                <textarea name="content" id="content" placeholder="Conteúdo aqui"></textarea>
            </div>
            <button type="reset">Cancelar</button>
            <button type="submit">Adicionar</button>
        </form>
    </div>
</main>