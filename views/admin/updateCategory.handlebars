<style>
    body {
        font-family: 'Nunito', sans-serif;
    }

    main {
        margin: 10px auto;
        max-width: 90%;
    }
    form{
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        padding: 8px;
        border-radius: 6px;
        box-shadow: 0px 3px 10px rgba(88, 88, 88, 0.1), 0px 16px 31px rgba(88, 88, 88, 0.1);
    }

    h3{
        font-size: 25px;
    }

    label{
         font-size: 15px;
    }

    .input-field{
        width: 90%;
        padding: 2px;
    }

    input, textarea, select, option {
        min-width: 100%;
        border-radius: 6px;
        border: 1px solid gainsboro;
        height: 30px;
        font-size: 15px;
        margin-bottom: 10px;
    }

    textarea{
        height: 75px;
        resize: vertical;
    }

    button{
        border: none;
        margin: 10px auto;
        padding: 5px;
        cursor: pointer;
        color: white;
        width: 90%;
        border-radius: 6px;
        height: 30px;
        font-weight: 700;
        font-size: 15px;
    }

    button[type=submit]{
        background: rgb(62, 238, 39);
    }

    button[type=reset]{
        background: rgb(246, 53, 53);
    }

</style>

{{#each errors}}
    <div class="alert-danger">{{text}}</div>
{{/each}}

<main>
    <h3>Atualizar categoria</h3>
    <div class="form-newCategory">
        <form action="/admin/categorias/update" method="POST">
            <input type="hidden" name="id" value = "{{category._id}}">
            <div class="input-field">
                <label for="name">Nome:*</label>
                <input type="text" value = "{{category.name}}" name="name" id="name" >
            </div>
            <div class="input-field">
                <label for="slug">Slug:*</label>
                <input type="text" value = "{{category.slug}}" name="slug" id="slug" >
            </div>
            <button type="submit">Atualizar</button>
            <button type="reset">Cancelar</button>
        </form>
    </div>
</main>